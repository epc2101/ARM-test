{
     "$schema": "http://schemas.microsoft.org/azure/deploymentTemplate?api-version=2015-01-01#",
     "contentVersion": "1.0",
     "parameters" : {
        "accountName" : { "type" : "string" },
        "location" : { "type" : "string" },
        "credentialName": { "type": "string" },
		"JobName":  {"type": "string"}
     },
     "variables": {
     },
     "resources": [
         {
             "name": "[parameters('accountName')]",
             "type": "Microsoft.Automation/automationAccounts",
             "apiVersion": "2015-01-01-preview",
             "location": "[parameters('location')]",
             "dependsOn": [
             ],
             "tags": {
                 "key": "value"
             },
             "properties": {
                 "comment": "Resource defined structure",
                 "sku":
                 {
                     "name": "Free"
                 }
             },
             "resources": [
                {
                     "name": "Get-AzureVMTutorial",
                     "type": "runbooks",
                     "apiVersion": "2015-01-01-preview",
                     "location": "[parameters('location')]",
                     "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                     ],
                     "tags": {
                         "key": "value"
                     },
                     "properties": {
                        "runbookType": "Script",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "Tutorial runbook",
                        "publishContentLink":
                        {
                            "uri": "http://eus2oaasibizamarketprod1.blob.core.windows.net/marketplace-runbooks/Get-AzureVMTutorial.ps1",
                            "version": "1.0.0.0"
                        }
                     }
                },
                {
                    "name": "[parameters('credentialName')]",
                    "type": "credentials",
                    "apiVersion": "2015-01-01-preview",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                    ],
                    "tags": {
                        "key": "value"
                    },
                    "properties": {
                        "userName": "MyADUser.onmicrosoft.com",
                        "password": "MyADPassword",
                        "description": "Cred description"
                    }
                }
				,
                {
                "name": "[parameters('JobName')]",
                "type": "jobs",
                "apiVersion": "2015-01-01-preview",
                "location": "[parameters('location')]",
                "dependsOn": [
					"[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]",
					"[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'), '/runbooks/Get-AzureVMTutorial')]"
                ],
                "tags": {
					"key": "value"
                 },
                 "properties": {
                 "runbook": {
					"name": "Get-AzureVMTutorial"
                  }
                  }
                 }
             ]
         }
     ],
     "outputs": {
     }
}